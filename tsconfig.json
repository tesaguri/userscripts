{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["*/**/*.js", "*/**/*.ts"]
}
